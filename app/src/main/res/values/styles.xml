<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="font_700" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/samsungone_700</item>
    </style>

    <style name="setup_btn" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">108dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/samsungone_700</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/setup_next_button_background</item>
        <item name="android:foreground">@drawable/setting_light_mode_btn_ripple</item>
    </style>

    <style name="sign_edit_text" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/samsungone_700</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColorHint">#D6D6D6</item>
        <item name="android:gravity">top</item>
        <item name="android:maxLength">18</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:lastBaselineToBottomHeight">9dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="main_btn" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/samsungone_700</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingStart">23dp</item>
        <item name="android:paddingEnd">23dp</item>
        <item name="android:paddingTop">27dp</item>
        <item name="android:background">@drawable/main_btn_background</item>
        <item name="android:foreground">@drawable/main_rect_btn_ripple</item>
    </style>

    <style name="on_off_view" parent="font_700">
        <item name="android:layout_width">146dp</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingStart">11dp</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="light_mode_button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">144dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/samsungone_700</item>
        <item name="android:foreground">@drawable/setting_light_mode_btn_ripple</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="setting_section_title" parent="font_700">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginHorizontal">31dp</item>
        <item name="android:layout_marginTop">27dp</item>
    </style>

    <style name="member_name" parent="font_700">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="member_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/bling_rewards_locked_bg</item>
        <item name="android:foreground">@drawable/photo_kit_ripple</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="locked_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/bling_rewards_locked_icon</item>
    </style>

    <style name="selected_view">
        <item name="android:layout_width">92dp</item>
        <item name="android:layout_height">92dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:src">@drawable/bling_rewards_selected</item>
    </style>

</resources>
