<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingHorizontal="34dp"
    android:paddingBottom="74dp">

    <TextView
        style="@style/font_700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="53dp"
        android:text="@string/sign_in"
        android:textSize="34dp" />

    <TextView
        android:id="@+id/user_id_view"
        style="@style/font_700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="ID"
        android:textColor="@color/colorPrimary"
        android:textSize="12dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/edit_user_id"
        style="@style/sign_edit_text"
        android:hint="ID" />

    <TextView
        android:id="@+id/password_view"
        style="@style/font_700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Password"
        android:textColor="@color/colorPrimary"
        android:textSize="12dp"
        android:visibility="invisible" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_password_view"
            style="@style/sign_edit_text"
            android:hint="Password"
            android:inputType="textPassword" />

        <ImageButton
            android:id="@+id/show_password_btn"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="4dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/bling_setup_password_show"
            android:visibility="gone" />
    </FrameLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sign_up_link_view"
            style="@style/font_700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/underline_view"
            android:clickable="true"
            android:paddingBottom="2dp"
            android:text="@string/sign_up"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/sign_in_btn"
            style="@style/setup_btn"
            android:alpha="0.4"
            android:enabled="false"
            android:text="@string/sign_in" />

    </LinearLayout>
</LinearLayout>