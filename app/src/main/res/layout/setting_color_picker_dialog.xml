<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="41dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/font_700"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Current"
            android:textSize="16dp" />

        <View
            android:id="@+id/prev_color"
            android:layout_width="56dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/setting_picker_dialog_color_view" />

        <View
            android:layout_width="2dp"
            android:layout_height="14dp"
            android:layout_marginEnd="16dp"
            android:background="@color/pickerDialogLineColor" />

        <TextView
            style="@style/font_700"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New"
            android:textSize="16dp" />

        <View
            android:id="@+id/new_color"
            android:layout_width="56dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/setting_picker_dialog_color_view" />

    </LinearLayout>

    <cn.cricin.colorpicker.CircleColorPicker
        android:id="@+id/color_picker_circle"
        android:layout_width="310dp"
        android:layout_height="310dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="57dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel"
            style="@style/font_700"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/main_rect_btn_ripple"
            android:gravity="center"
            android:text="Cancel"
            android:textSize="16dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="@color/pickerDialogBTLineColor" />

        <Button
            android:id="@+id/done"
            style="@style/font_700"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/main_rect_btn_ripple"
            android:gravity="center"
            android:text="Done"
            android:textSize="16dp" />

    </LinearLayout>
</LinearLayout>