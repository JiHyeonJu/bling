<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="41dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/font_700"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Current"
            android:textSize="16dp" />

        <View
            android:id="@+id/prev_color"
            android:layout_width="56dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/setting_picker_dialog_color_view" />

        <View
            android:layout_width="2dp"
            android:layout_height="14dp"
            android:layout_marginEnd="16dp"
            android:background="@color/pickerDialogLineColor" />

        <TextView
            style="@style/font_700"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New"
            android:textSize="16dp" />

        <View
            android:id="@+id/new_color"
            android:layout_width="56dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/setting_picker_dialog_color_view" />

    </LinearLayout>

    <com.skydoves.colorpickerview.ColorPickerView
        android:id="@+id/color_picker_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="33dp"
        android:layout_marginBottom="57dp"
        android:layout_weight="1"
        app:alpha_flag="1"
        app:alpha_selector="1"
        app:palette="@drawable/bling_colorpicker_palette"
        app:selector="@drawable/color_picker_wheel" />

    <!--<FrameLayout
        android:id="@+id/brightness_slide_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="41dp"
        android:layout_marginBottom="58dp"
        android:visibility="gone">

        <com.skydoves.colorpickerview.sliders.BrightnessSlideBar
            android:id="@+id/brightness_slide"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:borderColor_BrightnessSlider="@color/white"
            app:borderSize_BrightnessSlider="0"
            app:selector_BrightnessSlider="@drawable/bling_brightness_wheel_with_padding" />

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/bar_clip" />
    </FrameLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel"
            style="@style/font_700"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/main_rect_btn_ripple"
            android:gravity="center"
            android:text="Cancel"
            android:textSize="16dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="@color/pickerDialogBTLineColor" />

        <Button
            android:id="@+id/done"
            style="@style/font_700"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/main_rect_btn_ripple"
            android:gravity="center"
            android:text="Done"
            android:textSize="16dp" />

    </LinearLayout>
</LinearLayout>